@using NN.POS.Web.Extensions
@using NN.POS.Web.Constants
<MudNavMenu>
    <MudNavGroup Title="Contacts" Expanded="@(NavbarStateService.Value == RouteName.Contact)">
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.Supplier">Suppliers</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.Customers">Customers</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.CustomerGroups">Customer Groups</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="User Management" Expanded="@(NavbarStateService.Value == RouteName.UsersManagement)">
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.Users">Users</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.Roles">Roles</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Products" Expanded="@(NavbarStateService.Value is RouteName.Products or RouteName.UnitOfMeasure)">
        <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.ItemMasterData">Item Master Data</MudNavLink>

        <MudNavGroup Title="Unit of Measure" Expanded="@(NavbarStateService.Value == RouteName.UnitOfMeasure)">
            <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.Uom">Uom</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.UomGroup">Uom Group</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="@RouteName.UomDefine">Uom Define</MudNavLink>
        </MudNavGroup>
    </MudNavGroup>
</MudNavMenu>